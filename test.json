{
    "$schema": "https://repometric.github.io/linterhub/schema/args.json",
    "name": "linter1",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/arguments"
        }
    ],
    "delimeters": "=",
    "definitions": {
        "arguments": {
            "type": "object",
            "properties": {
                "": {
                    "id": "linterhub:path",
                    "type": "string",
                    "description": "Path for analysis"
                },
                "--names": {
                    "id": "args:--names",
                    "type": "string",
                    "description": "A comma-separated list of file names to check [default: [\"*.php\"]]",
                    "default": "[\"*.php\""
                },
                "--names-exclude": {
                    "id": "args:--names-exclude",
                    "type": "string",
                    "description": "A comma-separated list of file names to exclude"
                },
                "--regexps-exclude": {
                    "id": "args:--regexps-exclude",
                    "type": "string",
                    "description": "A comma-separated list of paths regexps to exclude (example: \"#var/.*_tmp#\")"
                },
                "--exclude": {
                    "id": "args:--exclude",
                    "type": "string",
                    "description": "Exclude a directory from code analysis (must be relative to source) (multiple values allowed)"
                },
                "--log-pmd": {
                    "id": "args:--log-pmd",
                    "type": "string",
                    "description": "Write result in PMD-CPD XML format to file"
                },
                "--min-lines": {
                    "id": "args:--min-lines",
                    "type": "string",
                    "description": "Minimum number of identical lines [default: 5]",
                    "default": "5"
                },
                "--min-tokens": {
                    "id": "args:--min-tokens",
                    "type": "string",
                    "description": "Minimum number of identical tokens [default: 70]",
                    "default": "70"
                },
                "--fuzzy": {
                    "id": "--fuzzy",
                    "type": "string",
                    "description": "Fuzz variable names"
                },
                "--progress": {
                    "id": "--progress",
                    "type": "string",
                    "description": "Show progress bar"
                },
                "--help": {
                    "type": "null",
                    "description": "Show help message"
                },
                "--quiet": {
                    "id": "--quiet",
                    "type": "string",
                    "description": "Do not output any message"
                },
                "--version": {
                    "id": "linterhub:version",
                    "type": "null",
                    "description": "Show version"
                },
                "--ansi": {
                    "id": "--ansi",
                    "type": "string",
                    "description": "Force ANSI output"
                },
                "--no-ansi": {
                    "id": "--no-ansi",
                    "type": "string",
                    "description": "Disable ANSI output"
                },
                "--no-interaction": {
                    "id": "--no-interaction",
                    "type": "string",
                    "description": "Do not ask any interactive question"
                },
                "--verbose": {
                    "id": "--verbose",
                    "type": "string",
                    "description": "Increase the verbosity of messages: 1 for normal output, 2 for more verbose output and 3 for debug"
                }
            }
        },
        "section": {
            "type": "object",
            "description": "The engine configuration section",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The engine name",
                    "enum": [
                        "linter1"
                    ]
                },
                "options": {
                    "type": "object",
                    "description": "The engine configuration",
                    "$ref": "#/definitions/arguments"
                }
            }
        }
    }
}